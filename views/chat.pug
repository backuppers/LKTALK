doctype html
html
  head
    - filename = 'chat'
    include includes/metadatas.pug
    include includes/styles.pug
  body
    div.container: div.flexable

        div.header: div.row
          div.col.s12.m8.l6.offset-m2.offset-l3
            nav.nav-extended.pink
              div.nav-wrapper
                a.brand-logo.center LKTALK
                a.sidenav-trigger(href='#' data-target='status')
                  i.material-icons menu
            ul#status.sidenav
              li: div.user-view
                div.background.darken-2.pink
                a: i.circle.material-icons.white.medium.center.pink-text person
                a: span#username_side.white-text.name= username
                a: span#useremail_side.white-text.email test@l-k.kr
              li: a.subheader
                span#members_count
                span 명 접속중
              li: div.divider
              ul#side_members
                each val in [1,2,3,4]
                  li: a(href='#' class=val) human #{ val }
        
        div#list.content: div.row
          div#viewer.col.s12.m8.l6.offset-m2.offset-l3

            //- 메세지 카드 템플릿
